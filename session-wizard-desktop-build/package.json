{
  "name": "session-wizard-desktop-build",
  "productName": "Session Wizard",
  "version": "1.3.0",
  "description": "Electron wrapper for Session Wizard web app",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --windows nsis"
  },
  "author": "Lucas James",
  "license": "MIT",
  "devDependencies": {
    "electron": "^38.1.2",
    "electron-builder": "^24.6.0"
  },
  "build": {
    "appId": "com.lucasjames.sessionwizard",
    "productName": "Session Wizard",
    "directories": {
      "app": "..",
      "buildResources": "..\\assets",
      "output": "dist"
    },
    "icon": "..\\assets\\img\\icon-512.png",
    "extraMetadata": {
      "version": "1.3.0",
      "main": "session-wizard-desktop-build/main.js"
    },
    "asar": true,
    "asarUnpack": [
      "assets/**",
      "tools/**"
    ],
    "mac": {
      "icon": "..\\assets\\img\\icon-512.icns"
    },
    "files": [
      "index.html",
      "about.html",
      "manifest.json",
      "assets/**",
      "tools/**",
      "README.md",
      "session-wizard-desktop-build/main.js",
      "session-wizard-desktop-build/preload.js",
      "session-wizard-desktop-build/preview-preload.js",
      "session-wizard-desktop-build/package.json",
      "!docs/**",
      "!_archive/**",
      "!node_modules/**",
      "!session-wizard-desktop-build/dist/**",
      "!session-wizard-desktop-build/node_modules/**",
      "!**/*.log"
    ],
    "win": {
      "icon": "..\\assets\\img\\icon-192.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
